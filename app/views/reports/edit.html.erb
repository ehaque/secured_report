<h1>Editing report</h1>

<%= form_for(@report) do |f| %>
<table>
<tr>
<td><b>Name: </b></td><td><%= f.text_field :name %></td>
</tr>
<tr>
<td><b>CODE: <b/></td><td><%= f.text_field :code %></td>
</tr>
<tr>
    <td><b>Report group: </b></td><td><%= f.text_field :report_group %></td>
</tr>
<tr >
<td><b>File name: </b></td><td><%= f.text_field :file_name %></td>
</tr>
<tr >
<td><b>Is secured: </b></td><td><%= f.check_box :is_secured %></td>
</tr>

<tr>
<td><b>Date range(in days): </b></td><td><%= f.text_field :date_range %></td>
</tr>
<tr>
<td><b>Record count: </b></td><td><%= f.text_field :record_count %></td>
</tr>
<tr>
<td><b>Security level(0=high, ... 2=Normal):</b></td><td><%= f.text_field :security %></td>
</tr>

<tr>
<td></td><td><%= f.submit "Update" %></td>
</tr>
</table
<% end %>

<%= link_to 'Show', @report %> |
<%= link_to 'List', reports_path %>
