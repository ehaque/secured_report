<h1>Report List</h1>

<table border='1'>
  <tr>
    <th>Name</th>
    <th>Code</th>
    <th>Report group</th>
    <th>Date range</th>
    <th>Record count</th>
    <th>Security</th>
    <th></th>
  </tr>

<% @reports.each do |report| %>
  <tr>
    <td><%= link_to report.name, report %></td>
    <td><%= report.code %></td>
    <td><%= report.report_group%></td>
    <td><%= report.date_range%></td>
    <td><%= report.record_count %></td>
    <td><%= report.security %></td>
    <td><%= link_to 'Delete', report, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>

</table>

<br />

<%= link_to 'New Report', new_report_path %>
